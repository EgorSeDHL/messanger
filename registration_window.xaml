<Window x:Class="_6_практос.registration_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6_практос"
        mc:Ignorable="d"
        Title="registration_window"  MinHeight="400" MaxHeight="400" MinWidth="300" MaxWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="Введите IP сервера" TextAlignment="Center" FontSize="30" VerticalAlignment="Top" />
        <TextBox x:Name="ipBox" Height="60" Margin="10" Grid.Row="0" VerticalAlignment="Bottom" TextWrapping="Wrap" />
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="Введите логин" Grid.Row="1" TextAlignment="Center" FontSize="30" VerticalAlignment="Top" />
        <TextBox x:Name="loginBX" Height="60" Margin="10" Grid.Row="1" VerticalAlignment="Bottom" TextWrapping="Wrap" />
        <Button Content="Авторизироваться" HorizontalAlignment="Center" Grid.Row="2" FontSize="30" VerticalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
