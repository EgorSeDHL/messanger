<Window x:Class="_6_практос.chat_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6_практос"
        mc:Ignorable="d"
        Title="chat_window" MinHeight="400" MinWidth="300" MaxHeight="400" MaxWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="283*"/>
            <RowDefinition Height="101*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Content="Отправить" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Click="Button_Click" />
        <TextBox Name="Message" Grid.Row="1" TextWrapping="Wrap" Text="" FontSize="25" Margin="0"/>
        <ListBox x:Name="ListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Grid.Row="0"/>
    </Grid>
</Window>
